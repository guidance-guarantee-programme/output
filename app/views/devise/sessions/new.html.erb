<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2><%= title 'Log in' %></h2>

  <div class="l-form-row">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, class: 't-email' %>
  </div>

  <div class="l-form-row">
    <%= f.label :password %><br/>
    <%= f.password_field :password, autocomplete: 'off', class: 't-password' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="l-form-row">
      <%= f.check_box :remember_me, 't-remember-me' %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="l-form-row">
    <%= f.submit 'Log in', class: 't-submit' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
