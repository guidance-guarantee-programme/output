<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <div class="page-header">
    <h2><%= title 'Resend confirmation instructions' %></h2>
  </div>

  <%= devise_error_messages! %>

  <div class="row">
    <div class="form-group col-xs-4">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: %w(form-control t-email) %>
    </div>
  </div>

  <p>
    <%= f.submit 'Resend confirmation instructions', class: %w(t-submit) %>
  </p>
<% end %>

<%= render 'devise/shared/links' %>
