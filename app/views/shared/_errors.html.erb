<% if local_assigns.include?(:model) && local_assigns[:model].errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2 class="alert__heading">There's a problem</h2>
    <ul>
      <% local_assigns[:model].errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
