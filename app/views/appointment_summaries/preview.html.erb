<%= @output_document.html.html_safe %>

<%= form_for @appointment_summary, url: appointment_summaries_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email_address %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :date_of_appointment %>
  <%= f.hidden_field :guider_name %>
  <%= f.hidden_field :guider_organisation %>
  <%= f.hidden_field :value_of_pension_pots %>
  <%= f.hidden_field :income_in_retirement %>
  <%= f.hidden_field :continue_working %>
  <%= f.hidden_field :unsure %>
  <%= f.hidden_field :leave_inheritance %>
  <%= f.hidden_field :wants_flexibility %>
  <%= f.hidden_field :wants_security %>
  <%= f.hidden_field :wants_lump_sum %>
  <%= f.hidden_field :poor_health %>

  <p>
    <%= f.submit 'Confirm', class: %w(btn-success t-confirm btn-lg) %>
  </p>
<% end %>
